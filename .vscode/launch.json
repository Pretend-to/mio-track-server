{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/dist/index.js", // 编译后的入口文件
            "preLaunchTask": "tsc: build - tsconfig.json", // 生成 TypeScript
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js" // 生成的 JavaScript 文件
            ],
            "sourceMaps": true // 启用 source maps
        }
    ]
}